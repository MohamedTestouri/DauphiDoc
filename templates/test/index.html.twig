{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
<div class="col-md-12">
    <h3 class="title-5 m-b-35">Test table</h3>
    <div class="table-responsive table-responsive-data2">
        <div class="table-data__tool">
        <div class="table-data__tool-left">
    <a class="btn btn-primary" href="{{ path('test_teacher') }}">Order by Teacher</a>
    <a class="btn btn-primary" href="{{ path('test_category') }}">Order by Category</a>
        </div>

        <div class="table-data__tool-right">
    <a class="btn btn-success" href="{{ path('test_new') }}"><i class="zmdi zmdi-plus"></i> Create new</a>
    <a class="btn btn-secondary" href="{{ path('test_pdf') }}">Print PDF</a>
        </div>
        </div>
    <table class="table table-data2" id="myTable">
        <thead>
            <tr>
                <th>Idtest</th>
                <th>Nom</th>
                <th>Cat</th>
                <th>Contenu</th>
                <th>Datetest</th>
                <th>Noenseig</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.idtest }}</td>
                <td>{{ test.nom }}</td>
                <td>{{ test.cat }}</td>
                <td>{{ test.contenu }}</td>
                <td>{{ test.datetest ? test.datetest|date('Y-m-d') : '' }}</td>
                <td>{{ test.noenseig }}</td>
                <td><div class="table-data-feature">
                    <a class="item" data-toggle="tooltip" data-placement="top" title="Edit" href="{{ path('test_edit', {'idtest': test.idtest}) }}"><i class="zmdi zmdi-edit"></i></a>
                    <a class="item" data-toggle="tooltip" data-placement="top" title="Show" href="{{ path('test_show', {'idtest': test.idtest}) }}"><i class="zmdi zmdi-more"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {{ knp_pagination_render(tests) }}
    </div>
    </div>
</div>
{% endblock %}
